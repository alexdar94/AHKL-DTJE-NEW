<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/restaurantImage"
            />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/review"
            android:background="@drawable/location"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@+id/review"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pencel"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="265dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_toRightOf="@+id/rating_textview"
                android:layout_alignBottom="@+id/rating_textview"
                android:layout_marginLeft="80dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/goldenstar"
                    android:id="@+id/detail_star1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/goldenstar"
                    android:id="@+id/detail_star2"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/goldenstar"
                    android:id="@+id/detail_star3"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/goldenstar"
                    android:id="@+id/detail_star4"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/goldenstar"
                    android:id="@+id/detail_star5"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/name_textview" />

            <TextView
                android:layout_below="@+id/name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/distance_textview"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/distance_textview"
                android:layout_toRightOf="@+id/distance_textview"
                android:layout_marginLeft="60dp"
                android:id="@+id/output_distance_textview"
                android:textSize="22sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_textview"
                android:layout_toRightOf="@+id/price_textview"
                android:layout_marginLeft="100dp"
                android:id="@+id/output_price_textview"
                android:textSize="22sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/description_textview"
                android:layout_toRightOf="@+id/description_textview"
                android:layout_marginLeft="30dp"
                android:id="@+id/output_description_textview"
                android:textSize="22sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/contact_textview"
                android:layout_toRightOf="@+id/contact_textview"
                android:layout_marginLeft="70dp"
                android:id="@+id/output_contact_textview"
                android:textSize="22sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="150dp"
                android:layout_alignBaseline="@+id/distance_textview"
                android:id="@+id/separator1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="150dp"
                android:layout_alignBaseline="@+id/rating_textview"
                android:id="@+id/separator2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="150dp"
                android:layout_alignBaseline="@+id/price_textview"
                android:id="@+id/separator3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="150dp"
                android:layout_alignBaseline="@+id/description_textview"
                android:id="@+id/separator4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="150dp"
                android:layout_alignBaseline="@+id/contact_textview"
                android:id="@+id/separator5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="22sp"
                android:layout_below="@+id/distance_textview"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/rating_textview"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="22sp"
                android:layout_below="@+id/rating_textview"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/price_textview"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:text="Description"
                android:textSize="22sp"
                android:layout_below="@+id/contact_textview"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/description_textview"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="22sp"
                android:layout_below="@+id/price_textview"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/contact_textview"
                />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@color/actionbar_background">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/book_button"
            android:layout_weight="1"
            android:text="Book Now"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/order_button"
            android:text="Order Now"
            android:onClick="order"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/save_button"
            android:text="Favorites"
            />
    </LinearLayout>
</LinearLayout>
